<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hermes.hermes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hermes.hermes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hermes.hermes.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.hermes.hermes.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.hermes.hermes.ViewGuideActivity"
            android:label="@string/title_activity_add_edit_guide" >
        </activity>
        <activity
            android:name="com.hermes.hermes.AddGuiaActivity"
            android:label="@string/title_activity_add_edit_guide" >
        </activity>
        <activity
            android:name="com.hermes.hermes.AddEditProductActivity"
            android:label="@string/title_activity_add_edit_product" >
        </activity>
        <activity
            android:name="com.hermes.hermes.AddEditClientActivity"
            android:label="@string/title_activity_add_edit_client" >
        </activity>
        <activity
            android:name="com.hermes.hermes.AddEditPlaceActivity"
            android:label="@string/title_activity_add_edit_place" >
        </activity>
        <service
            android:name="com.hermes.hermes.service.ProductImportService"
            android:exported="false">
        </service>
        <service
            android:name="com.hermes.hermes.service.PlaceImportService"
            android:exported="false">
        </service>
        <service
            android:name="com.hermes.hermes.service.CompanyImportService"
            android:exported="false">
        </service>
        <service
            android:name="com.hermes.hermes.service.GuideImportService"
            android:exported="false">
        </service>
        <service
            android:name="com.hermes.hermes.service.GuideExportService"
            android:exported="false">
        </service>
    </application>

</manifest>
